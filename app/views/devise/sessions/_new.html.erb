<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-signin"}) do |f| %>
			
			<!-- Email and password -->
            <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Email address", required: true %>
            <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>

            <!-- Remember me checkbox -->
            <% if devise_mapping.rememberable? %>
            	<label class="checkbox">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </label>
            <% end %>

            <!-- Submit button -->
            <div><%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block"%></div>
          <% end %>

        <!-- Forgot your password -->
		<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
		  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
		<% end -%>
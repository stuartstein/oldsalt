<div class="edit-btn">
	<%= link_to "Edit", edit_member_path(@member), class: "btn btn-lg btn-primary" %>
</div> 

<h1 class="page-header"><%= link_to "Members", members_path %> > <%= @member.full_name %></h1>


<div class="contact-info">
	<%= @member.email %><br>
	<%= @member.phone %><br>
	<%= @member.address1 %><br>
	<%= @member.address2 unless @member.address2.nil?  %><br>
	<%= "#{@member.city}, #{@member.state} #{@member.zip}"  %>
</div>

<% if current_member.is_admin %>
  <div class="contact-info">
  	<br>Permissions: <%= @member.role %><br>
  	<!-- TODO implement login -->
  	Last login: Apr 1, 2012 
  </div>
<% end %>

<h2 class="sub-header">Upcoming</h2>
<div class="table-responsive">
    <table class="table table-striped">
      	<thead>
		    <tr>
		    	<th>Event date</th>
		    	<th>Lead</th>
		    	<th>Price</th>
		    	<th>Quantity</th>
		    	<th>Total</th>
		    	<th>Refund</th>
		    </tr>
       	</thead>
       <tbody>
       		<% @upcoming.each do |event| %>
	      	 	<tr>
	       			<td><%= link_to format_date(event.start_date), 
	       					event_path(event.id) %></td>
	       			<td><%= print_first_last(event.get_leads) %></td>
	       			<!-- TODO: Implement after finishing order system -->
	       			<td>$75.00</td>
	       			<td>1</td>
	       			<td>$75.00</td>
	       			<td>Refund</td>
	       		</tr>	
       		<% end %>
       </tbody>
    </table>
</div>


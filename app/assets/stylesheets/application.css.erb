#wrap {
	max-width: 800px;
	overflow: hidden;
	display: block;
}

#logo-front {
	margin-top: 80px;
	max-width: 700px;
}

#logo-front img {
	margin-bottom: 40px;
	width: 300px;
}

#logo-front button {
	margin-top: 40px;
}
.centered {
	margin: 0 auto;
	text-align: center;
}

#logo-header img {
	width: 150px;
	margin: 25px 0 15px 0;
}

.admin-nav {
	padding: 0 15px;
}

#heading-nav{
	margin-bottom: 0px;
	padding-bottom: 0px;
	height: 40px;
}

.double-line {
	border-top: 2px #aab6b9 solid;
	border-bottom: 2px #aab6b9 solid;
	height: 20px;
	display: block;
	margin: 5px 0;
}

.modal-dialog {
    margin: 0;
    position: absolute;
    top: 100px;
}

#remember-me {
	text-align: left;
}

.upcoming-thumbs img{
	width: 100%;
	margin: 30px 0;
}

.draft_thumbs{
	background-color: #f8f8f8;
	border: 1px solid #e7e7e7;
	padding: 20px 0;
}

.draft_thumbs img{
	height: 70px;
}

.draft_thumbs li{
display: inline-block;
}

.drafts{
	color: #777;
	height: 20px;
	font-size: 18px;
	line-height: 20px;
	padding: 15px 15px;
	vertical-align: middle;
}


div.imageSub { 
	position: relative; 
	margin: 30px 0;
}
      div.imageSub img { 
      	z-index: 1; 
		width: 100%;
      }

      div.imageSub div {
        position: absolute;
        left: 0%;
        right: 0%;
        top: 0;
        padding: 25px 15px 0px 20px;
        height: 70px;
        line-height: 16px;
        text-align: right;
        overflow: hidden;

      }
	  div.imageSub div.blackbg {
	    z-index: 2;
	    background-color: #000;
	    -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=50)";
	    filter: alpha(opacity=70);
	    opacity: 0.70;
	  }

	div.imageSub div.label {
	z-index: 3;
	color: white;
	font-family: 'Podkova', serif;
	font-size: 30px;
	padding: 25px;
	}

div.imageSub div.seats {	
            margin-top: 200px;
            background-color: #aab6b9;

}

div.imageSub div.price {	margin-top: 300px;
	background-color: #000;
		}

.overlay    {  height: 50px;
			   width: 300px;
               opacity:0;
               -webkit-transition: opacity .25s ease;
           	}

div.imageSub:hover .overlay { opacity:.75;}

